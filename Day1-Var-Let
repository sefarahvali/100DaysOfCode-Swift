var name = "Sefa"
name = "Rifat"
    //degiskenleri istedigimiz zaman degistirebildigimizi gosterir.
print(name)

    // degistirmek istemiyorsak constant kullaniriz 
    // var yerine let 
let char = "Rifat Sefa"
    // let'in anlami char bugraya esit olsun
    // var sefa degerini name degiskenine ata demektir.
// char = "Bugra"
print(char)


