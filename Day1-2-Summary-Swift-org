

// varsayılan olarak yeşil atadık.
let defaultColorName = "green"
var userDefinedColorName: String?   // defaults to nil
// userDefinedColorName değişkenine bir değer atanmadığı için defaultColorName çalışacaktır.
// varsa ?? yoksa
var colorNameToUse = userDefinedColorName ?? defaultColorName
// userDefinedColorName isn't nil, so colorNameToUse is set to "green"
print(colorNameToUse)
userDefinedColorName = "black"
colorNameToUse = userDefinedColorName ?? defaultColorName
print(colorNameToUse)


    // range operators
    // üç noktalılarda ilk sayıdan başlar son sayı dahil olacak şekilde döngüsünü tamamlar.
for i in 1...5{
    print(i*5)
}

// iki noktalılar son döngüyü dahil etmez
let names = ["Anna", "Alex", "Brian", "Jack"]
let namesCount = names.count
for i in 0..<namesCount{
    print(" \(i+1) - \(names[i]) ")
}
